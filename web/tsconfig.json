{
    "compilerOptions": {
      "strict": true,
      "noEmitOnError": true,
      "removeComments": true,
      "sourceMap": false,
      "target": "es5",
      "skipLibCheck": true,
      "lib": [ "es5", "es2015", "dom" ],
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true
    },
    "include": [
      "src"
    ],
    "compileOnSave": false
}
